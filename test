<body>
    <div class="header">
        <h1>騒音振動モニター</h1>
        <div class="location">中部作業所</div>
    </div>
    
    <div class="container">
        <div class="meter-box noise" id="noiseBox">
            <div class="meter-label">騒 音</div>
            <div class="meter-value" id="noiseValue">--.-</div>
            <div class="meter-unit">dB</div>
        </div>
        
        <div class="meter-box vibration" id="vibrationBox">
            <div class="meter-label">振 動</div>
            <div class="meter-value" id="vibrationValue">--.-</div>
            <div class="meter-unit">dB</div>
        </div>
    </div>
    
    <div class="status">
        <div class="status-dot" id="statusDot"></div>
        <span id="statusText">接続中...</span>
    </div>
    
    <div class="timestamp" id="timestamp">----/--/-- --:--:--</div>

    <script>
        // ★★★ ここにGASのデプロイURLを貼り付けてください ★★★
        const GAS_URL = 'ここにGASのURLを貼り付け';
        
        const ALERT_THRESHOLD = 85;
        const REFRESH_INTERVAL = 5000; // 5秒ごとに更新
        
        async function fetchData() {
            try {
                const response = await fetch(GAS_URL);
                const data = await response.json();
                
                if (data.error) {
                    updateStatus(false, 'データ取得エラー');
                    return;
                }
                
                updateNoiseValue(data.noise);
                updateVibrationValue(data.vibration);
                
                if (data.timestamp) {
                    document.getElementById('timestamp').textContent = data.timestamp;
                } else {
                    updateLocalTimestamp();
                }
                
                updateStatus(true, 'リアルタイム更新中');
                
            } catch (error) {
                console.error('Fetch error:', error);
                updateStatus(false, '接続エラー');
            }
        }
        
        function updateNoiseValue(value) {
            const el = document.getElementById('noiseValue');
            const box = document.getElementById('noiseBox');
            
            if (el.textContent !== value) {
                el.textContent = value;
                el.classList.add('update-flash');
                setTimeout(() => el.classList.remove('update-flash'), 300);
            }
            
            const numValue = parseFloat(value);
            if (!isNaN(numValue) && numValue >= ALERT_THRESHOLD) {
                box.classList.add('alert');
            } else {
                box.classList.remove('alert');
            }
        }
        
        function updateVibrationValue(value) {
            const el = document.getElementById('vibrationValue');
            const box = document.getElementById('vibrationBox');
            
            if (el.textContent !== value) {
                el.textContent = value;
                el.classList.add('update-flash');
                setTimeout(() => el.classList.remove('update-flash'), 300);
            }
            
            const numValue = parseFloat(value);
            if (!isNaN(numValue) && numValue >= ALERT_THRESHOLD) {
                box.classList.add('alert');
            } else {
                box.classList.remove('alert');
            }
        }
        
        function updateLocalTimestamp() {
            const now = new Date();
            const year = now.getFullYear();
            const month = String(now.getMonth() + 1).padStart(2, '0');
            const day = String(now.getDate()).padStart(2, '0');
            const hour = String(now.getHours()).padStart(2, '0');
            const min = String(now.getMinutes()).padStart(2, '0');
            const sec = String(now.getSeconds()).padStart(2, '0');
            document.getElementById('timestamp').textContent = 
                year + '/' + month + '/' + day + ' ' + hour + ':' + min + ':' + sec;
        }
        
        function updateStatus(success, message) {
            const dot = document.getElementById('statusDot');
            const text = document.getElementById('statusText');
            
            if (success) {
                dot.classList.remove('error');
            } else {
                dot.classList.add('error');
            }
            text.textContent = message;
        }
        
        // 初期化
        document.addEventListener('DOMContentLoaded', function() {
            // GAS URLが設定されているかチェック
            if (GAS_URL === 'ここにGASのURLを貼り付け') {
                updateStatus(false, 'GAS URLを設定してください');
                document.getElementById('noiseValue').textContent = '--.-';
                document.getElementById('vibrationValue').textContent = '--.-';
                return;
            }
            
            // 初回取得
            fetchData();
            
            // 定期更新
            setInterval(fetchData, REFRESH_INTERVAL);
        });
    </script>
</body>
</html>
